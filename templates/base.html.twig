    <link href="../assets/images/webclip.png" rel="apple-touch-icon">
    {% block stylesheets %}
    {% endblock %}
</head>
<body class="body">
    <div data-animation="default" data-collapse="medium" data-duration="400" data-easing="ease" data-easing2="ease" role="banner" class="uui-navbar07_component w-nav">
        <div class="uui-navbar07_container">
            <a href="/" aria-current="page" class="uui-navbar07_logo-link w-nav-brand w--current">
                <div class="uui-logo_component">
                    <h1 class="heading" style="color: white;">Artistes</h1>
                </div>
            </a>
            <nav role="navigation" class="uui-navbar07_menu w-nav-menu">
                <div class="uui-navbar07_menu-left">
                    <!--
                    <a href="#" class="uui-navbar07_link w-nav-link">BD</a>
                    <a href="#" class="uui-navbar07_link w-nav-link">Scans</a>
                    -->
                    <a href="/artistes" class="uui-navbar07_link w-nav-link">Artistes</a>
                    <a href="/creations" class="uui-navbar07_link w-nav-link">Creations</a>
                    <!--
                    <a href="#" class="uui-navbar07_link w-nav-link">À propos</a>
                    -->
                </div>
                {% if app.user %}
                    {% set formattedFirstname = app.user.firstname|lower|capitalize %}
                    {% set formattedLastname = app.user.lastname|lower %}
                    {% set abbreviatedLastname = formattedLastname|slice(0, 1) ~ '.' %}

                    <div class="uui-navbar07_menu-right">
                        <a href="/profile/{{ app.user.token }}" class="uui-navbar07_link w-nav-link">{{ formattedFirstname }} {{ abbreviatedLastname }}</a>
                        <div class="uui-navbar07_button-wrapper">
                            <a href="/logout" class="uui-button-secondary-gray show-tablet w-inline-block">
                                <div>Déconnexion</div>
                            </a>
                            <a href="/logout" class="uui-button w-inline-block">
                                <div>Déconnexion</div>
                            </a>
                        </div>
                    </div>
                {% else %}
                <div class="uui-navbar07_menu-right">
                    <div class="uui-navbar07_button-wrapper">
                        <a href="/login" class="uui-button-secondary-gray show-tablet w-inline-block">
                            <div>Log in</div>
                        </a>
                        <a href="/login" class="uui-button w-inline-block">
                            <div>Connexion</div>
                        </a>
                    </div>
                </div>
                {% endif %}
            </nav>
            <div class="uui-navbar07_menu-button w-nav-button">
                <div class="menu-icon_component">
                    <div class="menu-icon_line-top"></div>
                    <div class="menu-icon_line-middle">
                        <div class="menu-icon_line-middle-inner"></div>
                    </div>
                    <div class="menu-icon_line-bottom"></div>
                </div>
            </div>
        </div>
    </div>

    {% block body %}{% endblock %}

    <footer class="uui-footer04_component">
        <div class="uui-page-padding">
            <div class="uui-container-large">
                <div class="uui-padding-vertical-xlarge">
                    <div class="w-layout-grid uui-footer04_link-list">
                        <a href="#" class="uui-footer04_link w-inline-block">
                            <div>Accueil</div>
                        </a>
                        <a href="#" class="uui-footer04_link w-inline-block">
                            <div>BD</div>
                        </a>
                        <a href="#" class="uui-footer04_link w-inline-block">
                            <div>Scan</div>
                        </a>
                        <a href="#" class="uui-footer04_link w-inline-block">
                            <div class="text-block-2">À propos</div>
                        </a>
                    </div>
                    <div class="uui-footer04_bottom-wrapper">
                        <div class="uui-text-size-small-2 text-color-gray500">Copyright © 2018 . Tous droits réservés.</div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

